<h1>New Task</h1>
<div class="row">
  <div class="col-md-6">
    <form class="create-form pl-3" style="width: 34rem;">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="taskNumber">Task Number</label>
          <input type="text" class="form-control" id="taskNumber" placeholder="Task Number">
        </div>
        <div class="form-group col-md-6">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Name">
        </div>

      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label for="picture">Picture URL</label>
        <input type="text" class="form-control" id="picture" placeholder="Picture URL">
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="time">Time since last step</label>
          <input type="text" class="form-control" id="time">
        </div>
        <div class="form-group col-md-4">
          <label for="timeUnit">Time Unit</label>
          <select id="timeUnit" class="form-control">
            <option>minutes</option>
            <option>hours</option>
            <option>days</option>
          </select>
        </div>
        <div class="form-group col-md-2">
          <label for="duration">Duration</label>
          <input type="text" class="form-control" id="duration">
        </div>
      </div>
      <div class="form-group">
        <label for="hardware">Cooking Hardware</label>
        <textarea class="form-control" id="hardware" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label for="ingredients">Ingredients</label>
        <textarea class="form-control" id="ingredients" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label for="steps">steps</label>
        <textarea class="form-control" id="steps" rows="3"></textarea>
      </div>

      <input type="hidden" id="idProject" value="1">


      <button type="submit" class="btn btn-primary">Add Task</button>
    </form>
  </div>
  <div class="col-md-6 order-md-2 mt-4">
    <h4 class="d-flex">
      <span class="text-muted">Task List</span>

    </h4>
    <ul class="list-group mb-3">

      <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
          <h6 class="my-0">
            Task Number: 1 - Name: name <br>

          </h6>

         


          <div class="modal" id="exampleModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Modal title</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                 description:<br>
                  time Since Last Step: <br>
                  time Units: <br>
                  cooking Hardware: <br>
                  duration: <br>
                  ingredients:<br>
                  steps:<br>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                 
                </div>
              </div>
            </div>
          </div>
          
        </div>
        <span class="text-muted">
           <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
           Details
          </button>
          <button class="delete btn btn-primary" data-id="">
            Delete
          </button>
        </span>

      </li>

    </ul>

  </div>

</div>
</div>