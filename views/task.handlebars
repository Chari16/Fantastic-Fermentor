<h1>New Task for - {{projects.name}}</h1>

<div class="row">
  <div class="col-md-6">
    <form class="create-form pl-3" style="width: 34rem;">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="taskNumber">Task Number</label>
          <input type="text" class="form-control" id="taskNumber" placeholder="Task Number">
        </div>
        <div class="form-group col-md-6">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Name">
        </div>

      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label for="picture">Picture URL</label>
        <input type="text" class="form-control" id="picture" placeholder="Picture URL">
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="time">Time since last step</label>
          <input type="text" class="form-control" id="time">
        </div>
        <div class="form-group col-md-4">
          <label for="timeUnit">Time Unit</label>
          <select id="timeUnit" class="form-control">
            <option>minutes</option>
            <option>hours</option>
            <option>days</option>
          </select>
        </div>
        <div class="form-group col-md-2">
          <label for="duration">Duration</label>
          <input type="text" class="form-control" id="duration">
        </div>
      </div>
      <div class="form-group " id="cooking">

        <button type="button" class=" btn btn-primary" id="btnCooking">Add cooking hardware</button>
        <div class="mt-3" id="opCooking"></div>

      </div>
      <div class="form-group">

        <button type="button" class=" btn btn-primary" id="btnIngredients">Add Ingredients</button>
        <div class="mt-3" id="opIngredients"></div>
      </div>
      <div class="form-group">

        <button type="button" class=" btn btn-primary" id="btnSteps">Add steps</button>
        <div class="mt-3" id="opSteps"></div>
      </div>

      <input type="hidden" id="idProject" value={{projects.id}}>


      <button type="submit" class="btn btn-primary">Add Task</button>
    </form>
  </div>
{{> tasks/tasks-block}}

</div>
</div>